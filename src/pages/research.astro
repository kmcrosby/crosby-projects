---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Research - Carthage Space Sciences">
  <section class="page-hero">
    <div class="container">
      <h1>Research</h1>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <p class="lead text-center">
        Explore our projects, experiments, and publications advancing space technology.
      </p>

      <div class="research-categories">
        <div class="category-card">
          <h2>Projects & Experiments</h2>
          <p>Hands-on research in microgravity phenomena, propellant management, and space technology.</p>
          <div class="placeholder-note">
            <p>Projects will appear here once added through the CMS.</p>
            <a href="/crosby-projects/admin/" class="btn">Add Projects via CMS</a>
          </div>
        </div>

        <div class="category-card">
          <h2>Publications</h2>
          <p>Research papers, conference presentations, and technical reports from our team.</p>
          <div class="placeholder-note">
            <p>Publications will appear here once added through the CMS.</p>
            <a href="/crosby-projects/admin/" class="btn">Add Publications via CMS</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
    .page-hero {
      background-color: var(--carthage-red);
      color: var(--carthage-white);
      padding: 3rem 0;
      margin-bottom: var(--spacing-xl);
    }

    .page-hero h1 {
      color: var(--carthage-white);
      margin: 0;
    }

    .research-categories {
      display: grid;
      gap: var(--spacing-xl);
      max-width: 900px;
      margin: var(--spacing-xl) auto;
    }

    .category-card {
      padding: var(--spacing-xl);
      background-color: var(--carthage-white);
      border: 2px solid var(--carthage-gray-light);
    }

    .category-card h2 {
      color: var(--carthage-red);
      margin-bottom: var(--spacing-sm);
    }

    .placeholder-note {
      margin-top: var(--spacing-lg);
      padding: var(--spacing-md);
      background-color: var(--carthage-gray-light);
      border-radius: 4px;
      text-align: center;
    }
  </style>
</BaseLayout>
