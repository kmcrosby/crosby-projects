---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all student entries from the content folder
const students = await getCollection('students');
---
<BaseLayout title="Students - Low-Gravity Fluids Lab">
  <section class="page-hero">
    <div class="container">
      <h1>Our Students</h1>
    </div>
  </section>
  <section class="section">
    <div class="container">
      <p class="lead text-center">
        Meet the talented students working on cutting-edge space technology research at Carthage College.
      </p>
      
      {students.length === 0 ? (
        <div class="placeholder-message">
          <h2>Student Profiles Coming Soon</h2>
          <p>
            Student bios will be added through the CMS admin interface. Once added, they will appear here automatically.
          </p>
          <a href="/crosby-projects/admin/" class="btn">Add Student Bios via CMS</a>
        </div>
      ) : (
        <div class="students-grid">
          {students.map((student) => (
            <div class="student-card">
              {student.data.photo && (
                <div class="student-photo">
                  <img src={student.data.photo} alt={student.data.name} />
                </div>
              )}
              <div class="student-info">
                <h2>{student.data.name}</h2>
                <p class="student-meta">
                  {student.data.major} â€¢ Class of {student.data.graduationYear}
                </p>
                <p class="student-focus">{student.data.researchFocus}</p>
                {student.data.accomplishments && student.data.accomplishments.length > 0 && (
                  <div class="student-accomplishments">
                    <h4>Accomplishments</h4>
                    <ul>
                      {student.data.accomplishments.map((item: string) => (
                        <li>{item}</li>
                      ))}
                    </ul>
                  </div>
                )}
                <div class="student-links">
                  {student.data.email && (
                    <a href={`mailto:${student.data.email}`} class="student-link">Email</a>
                  )}
                  {student.data.linkedin && (
                    <a href={student.data.linkedin} target="_blank" rel="noopener noreferrer" class="student-link">LinkedIn</a>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      )}
    </div>
  </section>
  <style>
    .page-hero {
      background-color: var(--carthage-red);
      color: var(--carthage-white);
      padding: 3rem 0;
      margin-bottom: var(--spacing-xl);
    }
    .page-hero h1 {
      color: var(--carthage-white);
      margin: 0;
    }
    .placeholder-message {
      max-width: 600px;
      margin: var(--spacing-2xl) auto;
      text-align: center;
      padding: var(--spacing-xl);
      background-color: var(--carthage-gray-light);
      border-radius: 8px;
    }
    .placeholder-message h2 {
      color: var(--carthage-red);
      margin-bottom: var(--spacing-md);
    }
    .students-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: var(--spacing-xl);
      margin-top: var(--spacing-xl);
    }
    .student-card {
      background: var(--carthage-white);
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .student-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    }
    .student-photo {
      width: 100%;
      height: 250px;
      overflow: hidden;
      background-color: var(--carthage-gray-light);
    }
    .student-photo img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .student-info {
      padding: var(--spacing-lg);
    }
    .student-info h2 {
      color: var(--carthage-red);
      margin: 0 0 var(--spacing-sm) 0;
      font-size: 1.4rem;
    }
    .student-meta {
      color: var(--carthage-gray);
      font-size: 0.9rem;
      margin-bottom: var(--spacing-sm);
    }
    .student-focus {
      color: var(--carthage-gray-dark);
      line-height: 1.6;
    }
    .student-accomplishments {
      margin-top: var(--spacing-md);
      padding-top: var(--spacing-md);
      border-top: 1px solid var(--carthage-gray-light);
    }
    .student-accomplishments h4 {
      color: var(--carthage-red);
      font-size: 0.9rem;
      margin-bottom: var(--spacing-sm);
    }
    .student-accomplishments ul {
      margin: 0;
      padding-left: var(--spacing-md);
    }
    .student-accomplishments li {
      font-size: 0.9rem;
      color: var(--carthage-gray-dark);
      margin-bottom: var(--spacing-xs);
    }
    .student-links {
      margin-top: var(--spacing-md);
      display: flex;
      gap: var(--spacing-sm);
    }
    .student-link {
      font-size: 0.85rem;
      color: var(--carthage-blue);
      text-decoration: none;
      padding: var(--spacing-xs) var(--spacing-sm);
      border: 1px solid var(--carthage-blue);
      border-radius: 4px;
      transition: background-color 0.2s ease, color 0.2s ease;
    }
    .student-link:hover {
      background-color: var(--carthage-blue);
      color: var(--carthage-white);
    }
  </style>
</BaseLayout>
