---
import '../styles/global.css';
import { getEntry } from 'astro:content';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Low-Gravity Fluids Lab at Carthage College' } = Astro.props;
const baseUrl = import.meta.env.BASE_URL || '/crosby-projects';

// Fetch site settings for colors
const siteSettings = await getEntry('settings', 'site');
const settings = siteSettings?.data || {};

// Color settings with defaults
const primaryColor = settings.primaryColor || '#D0202E';
const primaryColorLight = settings.primaryColorLight || '#EE2A37';
const primaryColorDark = settings.primaryColorDark || '#7A232F';
const accentColor = settings.accentColor || '#3AB0C8';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}/favicon.svg`} />
    <style define:vars={{ primaryColor, primaryColorLight, primaryColorDark, accentColor }} is:global>
      :root {
        --carthage-red: var(--primaryColor);
        --carthage-red-light: var(--primaryColorLight);
        --carthage-red-dark: var(--primaryColorDark);
        --carthage-accent: var(--accentColor);
      }
    </style>
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <nav class="main-nav">
          <div class="logo">
            <a href={`${baseUrl}/`}>
              <h1 class="site-title">Low-Gravity Fluids Lab</h1>
            </a>
          </div>
          <ul class="nav-menu">
            <li><a href={`${baseUrl}/`}>Home</a></li>
            <li><a href={`${baseUrl}/about`}>About</a></li>
            <li><a href={`${baseUrl}/students`}>Students</a></li>
            <li><a href={`${baseUrl}/research`}>Research</a></li>
            <li><a href={`${baseUrl}/resources`}>Resources</a></li>
            <li><a href={`${baseUrl}/media`}>Media</a></li>
            <li><a href={`${baseUrl}/partners`}>Partners</a></li>
            <li><a href={`${baseUrl}/join`}>Join Us</a></li>
            <li><a href={`${baseUrl}/contact`}>Contact</a></li>
          </ul>
          <button class="mobile-menu-toggle" aria-label="Toggle menu">
            <span></span>
            <span></span>
            <span></span>
          </button>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-section">
            <h3>Low-Gravity Fluids Lab</h3>
            <p>Solving critical technology problems for sustained human presence in space</p>
          </div>
          <div class="footer-section">
            <h4>Quick Links</h4>
            <ul>
              <li><a href={`${baseUrl}/about`}>About the Program</a></li>
              <li><a href={`${baseUrl}/students`}>Student Bios</a></li>
              <li><a href={`${baseUrl}/research`}>Research</a></li>
              <li><a href={`${baseUrl}/join`}>Join Us</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h4>Connect</h4>
            <ul>
              <li><a href="https://www.carthage.edu" target="_blank">Carthage College</a></li>
              <li><a href="https://wisconsinspacegrant.org" target="_blank">Wisconsin Space Grant</a></li>
              <li><a href={`${baseUrl}/contact`}>Contact Us</a></li>
            </ul>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; {new Date().getFullYear()} Low-Gravity Fluids Lab at Carthage College. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <style>
      /* Header Styles */
      .site-header {
        background-color: var(--carthage-red);
        padding: var(--spacing-sm) 0;
        position: sticky;
        top: 0;
        z-index: 1000;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      .site-title {
        color: var(--carthage-white);
        font-size: 1.5rem;
        margin: 0;
        text-transform: uppercase;
      }

      .site-title:hover {
        opacity: 0.9;
      }

      .main-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .nav-menu {
        display: flex;
        list-style: none;
        gap: var(--spacing-md);
        align-items: center;
      }

      .nav-menu a {
        color: var(--carthage-white);
        font-family: var(--font-sans);
        font-weight: bold;
        text-transform: uppercase;
        font-size: 0.9rem;
        letter-spacing: 0.05em;
        transition: opacity 0.3s ease;
      }

      .nav-menu a:hover {
        opacity: 0.8;
        text-decoration: none;
      }

      .mobile-menu-toggle {
        display: none;
        flex-direction: column;
        gap: 4px;
        background: none;
        border: none;
        cursor: pointer;
        padding: 5px;
      }

      .mobile-menu-toggle span {
        width: 25px;
        height: 3px;
        background-color: var(--carthage-white);
        transition: all 0.3s ease;
      }

      /* Footer Styles */
      .site-footer {
        background-color: var(--carthage-gray);
        color: var(--carthage-white);
        padding: var(--spacing-xl) 0 var(--spacing-md);
        margin-top: var(--spacing-2xl);
      }

      .footer-content {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: var(--spacing-xl);
        margin-bottom: var(--spacing-lg);
      }

      .footer-section h3,
      .footer-section h4 {
        color: var(--carthage-white);
        margin-bottom: var(--spacing-sm);
      }

      .footer-section ul {
        list-style: none;
      }

      .footer-section ul li {
        margin-bottom: var(--spacing-xs);
      }

      .footer-section a {
        color: var(--carthage-white);
        opacity: 0.9;
      }

      .footer-section a:hover {
        opacity: 1;
        color: var(--carthage-red-light);
      }

      .footer-bottom {
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        padding-top: var(--spacing-md);
        text-align: center;
      }

      .footer-bottom p {
        margin: 0;
        font-size: 0.9rem;
        opacity: 0.8;
      }

      /* Responsive Design */
      @media (max-width: 968px) {
        .nav-menu {
          display: none;
        }

        .mobile-menu-toggle {
          display: flex;
        }

        .nav-menu.active {
          display: flex;
          flex-direction: column;
          position: absolute;
          top: 100%;
          left: 0;
          right: 0;
          background-color: var(--carthage-red-dark);
          padding: var(--spacing-md);
          gap: var(--spacing-sm);
        }
      }
    </style>

    <script>
      // Mobile menu toggle
      const menuToggle = document.querySelector('.mobile-menu-toggle');
      const navMenu = document.querySelector('.nav-menu');

      if (menuToggle && navMenu) {
        menuToggle.addEventListener('click', () => {
          navMenu.classList.toggle('active');
        });
      }
    </script>
  </body>
</html>
