---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';

const joinPage = await getEntry('pages', 'join');
const data = joinPage?.data || {};

const title = data.title || 'Join Our Program';
const heroTitle = data.heroTitle || title;
const intro = data.intro || 'Ready to work on cutting-edge space technology? Join our team of undergraduate researchers solving real problems for space exploration.';
const benefits = data.benefits || [];
const academicRequirements = data.academicRequirements || [];
const personalQualities = data.personalQualities || [];
const applicationSteps = data.applicationSteps || [];
const ctaTitle = data.ctaTitle || 'Ready to Launch Your Future?';
const ctaButtonText = data.ctaButtonText || 'Contact Us Today';
---

<BaseLayout title={`${title} - Low-Gravity Fluids Lab`}>
  <section class="page-hero">
    <div class="container">
      <h1>{heroTitle}</h1>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="content-wrapper">
        <p class="lead text-center">{intro}</p>

        {benefits.length > 0 && (
          <>
            <h2>Why Join Us?</h2>
            <div class="grid grid-2">
              {benefits.map((benefit) => (
                <div class="benefit-card">
                  <h3>{benefit.title}</h3>
                  <p>{benefit.description}</p>
                </div>
              ))}
            </div>
          </>
        )}

        {(academicRequirements.length > 0 || personalQualities.length > 0) && (
          <>
            <h2>What We're Looking For</h2>
            <div class="requirements">
              {academicRequirements.length > 0 && (
                <>
                  <h3>Academic Background</h3>
                  <ul>
                    {academicRequirements.map((req) => (
                      <li>{req}</li>
                    ))}
                  </ul>
                </>
              )}

              {personalQualities.length > 0 && (
                <>
                  <h3>Personal Qualities</h3>
                  <ul>
                    {personalQualities.map((quality) => (
                      <li>{quality}</li>
                    ))}
                  </ul>
                </>
              )}
            </div>
          </>
        )}

        {applicationSteps.length > 0 && (
          <>
            <h2>How to Apply</h2>
            <div class="application-process">
              {applicationSteps.map((step, index) => (
                <div class="step">
                  <div class="step-number">{index + 1}</div>
                  <div class="step-content">
                    <h4>{step.title}</h4>
                    <p>{step.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </>
        )}

        <div class="cta-section">
          <h2>{ctaTitle}</h2>
          <a href="/crosby-projects/contact" class="btn">{ctaButtonText}</a>
        </div>
      </div>
    </div>
  </section>

  <style>
    .page-hero {
      background-color: var(--carthage-red);
      color: var(--carthage-white);
      padding: 3rem 0;
      margin-bottom: var(--spacing-xl);
    }

    .page-hero h1 {
      color: var(--carthage-white);
      margin: 0;
    }

    .content-wrapper {
      max-width: 1000px;
      margin: 0 auto;
    }

    .benefit-card {
      padding: var(--spacing-lg);
      background-color: var(--carthage-white);
      border: 2px solid var(--carthage-gray-light);
      transition: all 0.3s ease;
    }

    .benefit-card:hover {
      border-color: var(--carthage-red);
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .benefit-card h3 {
      color: var(--carthage-red);
      margin-bottom: var(--spacing-sm);
    }

    .requirements {
      background-color: var(--carthage-gray-light);
      padding: var(--spacing-lg);
      margin: var(--spacing-lg) 0;
    }

    .requirements h3 {
      color: var(--carthage-red);
      margin-top: var(--spacing-md);
      margin-bottom: var(--spacing-sm);
    }

    .requirements h3:first-child {
      margin-top: 0;
    }

    .requirements ul {
      list-style-position: inside;
      line-height: 2;
    }

    .application-process {
      margin: var(--spacing-xl) 0;
    }

    .step {
      display: flex;
      gap: var(--spacing-md);
      margin-bottom: var(--spacing-lg);
      align-items: flex-start;
    }

    .step-number {
      flex-shrink: 0;
      width: 50px;
      height: 50px;
      background-color: var(--carthage-red);
      color: var(--carthage-white);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      font-weight: bold;
      font-family: var(--font-sans);
    }

    .step-content h4 {
      margin-bottom: var(--spacing-xs);
      color: var(--carthage-red);
    }

    .cta-section {
      text-align: center;
      margin-top: var(--spacing-2xl);
      padding: var(--spacing-xl);
      background: linear-gradient(135deg, var(--carthage-red) 0%, var(--carthage-red-dark) 100%);
      color: var(--carthage-white);
      border-radius: 8px;
    }

    .cta-section h2 {
      color: var(--carthage-white);
      margin-bottom: var(--spacing-md);
    }

    .cta-section .btn {
      background-color: var(--carthage-white);
      color: var(--carthage-red);
    }

    .cta-section .btn:hover {
      background-color: var(--carthage-gray-light);
    }
  </style>
</BaseLayout>
