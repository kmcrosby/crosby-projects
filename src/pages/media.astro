---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const media = await getCollection('media');
const sortedMedia = media.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Helper function to get the correct image path
function getImagePath(imagePath: string | undefined): string | null {
  if (!imagePath) return null;
  return imagePath.startsWith('/') ? `/crosby-projects${imagePath}` : imagePath;
}
---
<BaseLayout title="Media Coverage - Carthage Space Sciences">
  <section class="page-hero">
    <div class="container">
      <h1>Media Coverage</h1>
    </div>
  </section>
  <section class="section">
    <div class="container">
      <p class="lead text-center">
        News coverage, interviews, and features about our space sciences program.
      </p>
      
      {sortedMedia.length === 0 ? (
        <div class="placeholder-message">
          <h2>Media Coverage Coming Soon</h2>
          <p>
            Media appearances will be added through the CMS admin interface.
          </p>
          <a href="/crosby-projects/admin/" class="btn">Add Media via CMS</a>
        </div>
      ) : (
        <div class="media-grid">
          {sortedMedia.map((item) => (
            <article class={`media-card ${!item.data.image ? 'no-image' : ''}`}>
              {item.data.image && (
                <div class="media-image">
                  <img src={getImagePath(item.data.image)} alt={item.data.title} />
                </div>
              )}
              <div class="media-content">
                <div class="media-meta">
                  <span class="media-type">{item.data.type}</span>
                  <span class="media-outlet">{item.data.outlet}</span>
                </div>
                <time datetime={item.data.date.toISOString()}>
                  {item.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                </time>
                <h2>{item.data.title}</h2>
                <p>{item.data.summary}</p>
                {item.data.tags && item.data.tags.length > 0 && (
                  <div class="media-tags">
                    {item.data.tags.map((tag: string) => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
                {item.data.link && (
                  <a href={item.data.link} target="_blank" rel="noopener noreferrer" class="media-link">
                    View Coverage â†’
                  </a>
                )}
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>
  <style>
    .page-hero {
      background-color: var(--carthage-red);
      color: var(--carthage-white);
      padding: 3rem 0;
      margin-bottom: var(--spacing-xl);
    }
    .page-hero h1 {
      color: var(--carthage-white);
      margin: 0;
    }
    .placeholder-message {
      max-width: 600px;
      margin: var(--spacing-2xl) auto;
      text-align: center;
      padding: var(--spacing-xl);
      background-color: var(--carthage-gray-light);
      border-radius: 8px;
    }
    .placeholder-message h2 {
      color: var(--carthage-red);
      margin-bottom: var(--spacing-md);
    }
    .media-grid {
      display: grid;
      gap: var(--spacing-xl);
      margin-top: var(--spacing-xl);
    }
    .media-card {
      display: grid;
      grid-template-columns: 1fr;
      background: var(--carthage-white);
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
    @media (min-width: 768px) {
      .media-card {
        grid-template-columns: 200px 1fr;
      }
      .media-card.no-image {
        grid-template-columns: 1fr;
      }
    }
    .media-image {
      height: 150px;
      overflow: hidden;
      background-color: var(--carthage-gray-light);
    }
    @media (min-width: 768px) {
      .media-image {
        height: 100%;
        min-height: 180px;
      }
    }
    .media-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .media-content {
      padding: var(--spacing-lg);
    }
    .media-meta {
      display: flex;
      gap: var(--spacing-sm);
      margin-bottom: var(--spacing-xs);
    }
    .media-type {
      font-size: 0.75rem;
      padding: 2px 8px;
      background-color: var(--carthage-blue);
      color: var(--carthage-white);
      border-radius: 4px;
      text-transform: uppercase;
    }
    .media-outlet {
      font-size: 0.85rem;
      color: var(--carthage-gray);
      font-weight: 500;
    }
    .media-content time {
      font-size: 0.8rem;
      color: var(--carthage-gray);
      display: block;
      margin-bottom: var(--spacing-xs);
    }
    .media-content h2 {
      color: var(--carthage-red);
      margin: var(--spacing-xs) 0 var(--spacing-sm) 0;
      font-size: 1.2rem;
    }
    .media-content p {
      color: var(--carthage-gray-dark);
      line-height: 1.6;
      font-size: 0.95rem;
    }
    .media-tags {
      display: flex;
      flex-wrap: wrap;
      gap: var(--spacing-xs);
      margin: var(--spacing-sm) 0;
    }
    .tag {
      font-size: 0.75rem;
      padding: 2px 8px;
      background-color: var(--carthage-gray-light);
      border-radius: 4px;
      color: var(--carthage-gray-dark);
    }
    .media-link {
      display: inline-block;
      margin-top: var(--spacing-sm);
      color: var(--carthage-blue);
      text-decoration: none;
      font-weight: 500;
    }
    .media-link:hover {
      text-decoration: underline;
    }
  </style>
</BaseLayout>
