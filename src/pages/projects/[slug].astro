---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.data.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<BaseLayout title={`${project.data.title} - Carthage Space Sciences`}>
  <main class="project-detail">
    <article>
      <header class="project-header">
        {project.data.image && (
          <div class="hero-image">
            <img 
              src={project.data.image.startsWith('/') ? `/crosby-projects${project.data.image}` : project.data.image}
              alt={project.data.title}
            />
          </div>
        )}
        <div class="header-content">
          <span class={`status-badge status-${project.data.status.toLowerCase()}`}>
            {project.data.status}
          </span>
          <h1>{project.data.title}</h1>
          <p class="description">{project.data.description}</p>
          {(project.data.startDate || project.data.endDate) && (
            <p class="dates">
              {project.data.startDate && (
                <span>Started: {new Date(project.data.startDate).toLocaleDateString('en-US', { month: 'long', year: 'numeric' })}</span>
              )}
              {project.data.startDate && project.data.endDate && <span> • </span>}
              {project.data.endDate && (
                <span>Ended: {new Date(project.data.endDate).toLocaleDateString('en-US', { month: 'long', year: 'numeric' })}</span>
              )}
            </p>
          )}
        </div>
      </header>

      <div class="project-content">
        <Content />
      </div>

      <footer class="project-footer">
        <a href="/crosby-projects/research/" class="back-link">
          ← Back to Research
        </a>
      </footer>
    </article>
  </main>
</BaseLayout>

<style>
  .project-detail {
    max-width: 900px;
    margin: 0 auto;
    padding: var(--spacing-lg);
  }

  .project-header {
    margin-bottom: var(--spacing-xl);
  }

  .hero-image {
    width: 100%;
    max-height: 400px;
    overflow: hidden;
    border-radius: 12px;
    margin-bottom: var(--spacing-lg);
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .header-content {
    text-align: center;
  }

  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    margin-bottom: var(--spacing-sm);
  }

  .status-active {
    background: #e8f5e9;
    color: #2e7d32;
  }

  .status-completed {
    background: #e3f2fd;
    color: #1565c0;
  }

  .status-upcoming {
    background: #fff3e0;
    color: #ef6c00;
  }

  h1 {
    font-size: 2.5rem;
    color: var(--carthage-black);
    margin: 0 0 var(--spacing-md) 0;
  }

  .description {
    font-size: 1.25rem;
    color: var(--carthage-gray);
    line-height: 1.6;
    margin-bottom: var(--spacing-sm);
  }

  .dates {
    color: var(--carthage-gray);
    font-size: 0.9rem;
  }

  .project-content {
    line-height: 1.8;
    font-size: 1.1rem;
  }

  .project-content :global(h2) {
    color: var(--carthage-red);
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
  }

  .project-content :global(h3) {
    color: var(--carthage-black);
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-sm);
  }

  .project-content :global(p) {
    margin-bottom: var(--spacing-md);
  }

  .project-content :global(img) {
    max-width: 100%;
    border-radius: 8px;
    margin: var(--spacing-lg) 0;
  }

  .project-content :global(ul),
  .project-content :global(ol) {
    margin-bottom: var(--spacing-md);
    padding-left: var(--spacing-lg);
  }

  .project-content :global(li) {
    margin-bottom: var(--spacing-sm);
  }

  .project-content :global(blockquote) {
    border-left: 4px solid var(--carthage-red);
    padding-left: var(--spacing-md);
    margin: var(--spacing-lg) 0;
    font-style: italic;
    color: var(--carthage-gray);
  }

  .project-footer {
    margin-top: var(--spacing-xl);
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--carthage-gray-light);
  }

  .back-link {
    color: var(--carthage-red);
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .project-detail {
      padding: var(--spacing-md);
    }

    h1 {
      font-size: 1.75rem;
    }

    .description {
      font-size: 1.1rem;
    }

    .project-content {
      font-size: 1rem;
    }
  }
</style>
