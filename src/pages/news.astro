---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const news = await getCollection('news');
const sortedNews = news.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---
<BaseLayout title="News - Carthage Space Sciences">
  <section class="page-hero">
    <div class="container">
      <h1>News & Updates</h1>
    </div>
  </section>
  <section class="section">
    <div class="container">
      <p class="lead text-center">
        The latest news, announcements, and updates from the Carthage Space Sciences program.
      </p>
      
      {sortedNews.length === 0 ? (
        <div class="placeholder-message">
          <h2>News Coming Soon</h2>
          <p>
            News and updates will be added through the CMS admin interface.
          </p>
          <a href="/crosby-projects/admin/" class="btn">Add News via CMS</a>
        </div>
      ) : (
        <div class="news-grid">
          {sortedNews.map((item) => (
            <article class="news-card">
              {item.data.image && (
                <div class="news-image">
                  <img src={item.data.image} alt={item.data.title} />
                </div>
              )}
              <div class="news-content">
                <time datetime={item.data.date.toISOString()}>
                  {item.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                </time>
                {item.data.mediaOutlet && (
                  <span class="news-outlet">{item.data.mediaOutlet}</span>
                )}
                <h2>{item.data.title}</h2>
                <p>{item.data.summary}</p>
                {item.data.tags && item.data.tags.length > 0 && (
                  <div class="news-tags">
                    {item.data.tags.map((tag: string) => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
                {item.data.externalLink && (
                  <a href={item.data.externalLink} target="_blank" rel="noopener noreferrer" class="news-link">
                    Read More â†’
                  </a>
                )}
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>
  <style>
    .page-hero {
      background-color: var(--carthage-red);
      color: var(--carthage-white);
      padding: 3rem 0;
      margin-bottom: var(--spacing-xl);
    }
    .page-hero h1 {
      color: var(--carthage-white);
      margin: 0;
    }
    .placeholder-message {
      max-width: 600px;
      margin: var(--spacing-2xl) auto;
      text-align: center;
      padding: var(--spacing-xl);
      background-color: var(--carthage-gray-light);
      border-radius: 8px;
    }
    .placeholder-message h2 {
      color: var(--carthage-red);
      margin-bottom: var(--spacing-md);
    }
    .news-grid {
      display: grid;
      gap: var(--spacing-xl);
      margin-top: var(--spacing-xl);
    }
    .news-card {
      display: grid;
      grid-template-columns: 1fr;
      background: var(--carthage-white);
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
    @media (min-width: 768px) {
      .news-card {
        grid-template-columns: 250px 1fr;
      }
    }
    .news-image {
      height: 200px;
      overflow: hidden;
      background-color: var(--carthage-gray-light);
    }
    @media (min-width: 768px) {
      .news-image {
        height: 100%;
      }
    }
    .news-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .news-content {
      padding: var(--spacing-lg);
    }
    .news-content time {
      font-size: 0.85rem;
      color: var(--carthage-gray);
    }
    .news-outlet {
      font-size: 0.85rem;
      color: var(--carthage-blue);
      margin-left: var(--spacing-sm);
      padding-left: var(--spacing-sm);
      border-left: 1px solid var(--carthage-gray-light);
    }
    .news-content h2 {
      color: var(--carthage-red);
      margin: var(--spacing-sm) 0;
      font-size: 1.3rem;
    }
    .news-content p {
      color: var(--carthage-gray-dark);
      line-height: 1.6;
      margin-bottom: var(--spacing-md);
    }
    .news-tags {
      display: flex;
      flex-wrap: wrap;
      gap: var(--spacing-xs);
      margin-bottom: var(--spacing-md);
    }
    .tag {
      font-size: 0.75rem;
      padding: 2px 8px;
      background-color: var(--carthage-gray-light);
      border-radius: 4px;
      color: var(--carthage-gray-dark);
    }
    .news-link {
      color: var(--carthage-blue);
      text-decoration: none;
      font-weight: 500;
    }
    .news-link:hover {
      text-decoration: underline;
    }
  </style>
</BaseLayout>
